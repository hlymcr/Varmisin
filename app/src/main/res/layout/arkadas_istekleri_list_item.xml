<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_purple_300"
    android:orientation="horizontal"
    android:weightSum="1">


    <ImageView
        android:id="@+id/resim"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/userimage" />

    <LinearLayout
        android:layout_width="87dp"
        android:layout_height="match_parent"
        android:layout_weight="0.97"
        android:background="@color/md_purple_50"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adSoyad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kullaniciAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="15sp" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/onay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="@color/md_deep_orange_300"
        app:fabSize="mini"
        app:srcCompat="@drawable/onay1" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="@color/md_brown_500"
        app:fabSize="mini"
        app:srcCompat="@drawable/delete" />


</LinearLayout>